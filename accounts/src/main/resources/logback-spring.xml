<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProfile name="!local">
        <!-- JSON logging for container environments -->
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp>
                        <timeZone>UTC</timeZone>
                    </timestamp>
                    <version/>
                    <logLevel/>
                    <message/>
                    <mdc/>
                    <arguments/>
                    <pattern>
                        <pattern>
                            {
                                "service": "accounts",
                                "traceId": "%X{traceId:-}",
                                "spanId": "%X{spanId:-}",
                                "correlationId": "%X{correlationId:-}",
                                "userId": "%X{userId:-}",
                                "operation": "%X{operation:-}",
                                "thread": "%thread"
                            }
                        </pattern>
                    </pattern>
                    <stackTrace/>
                </providers>
            </encoder>
        </appender>
    </springProfile>

    <springProfile name="local">
        <!-- Human-readable logging for local development -->
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level [%X{traceId:-},%X{spanId:-}] %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Reduce noise from Spring Boot internals -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.mongodb.driver" level="WARN"/>
    
    <!-- Enable debug for our application -->
    <logger name="com.example.accounts" level="INFO"/>
</configuration>